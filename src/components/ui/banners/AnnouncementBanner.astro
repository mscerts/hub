---
const { title, btnId, btnTitle, btnTitleMobile, url, version = "1", rememberDismissal = true } = Astro.props;

interface Props {
  title?: string;
  btnId: string;
  btnTitle: string;
  btnTitleMobile?: string;
  url: string;
  version?: string;
  rememberDismissal?: boolean;
}
---

<astro-banner btnId={btnId} version={version} rememberDismissal={rememberDismissal}>
  <div
    class="fixed bottom-0 start-1/2 z-50 mx-auto w-full -translate-x-1/2 transform p-6 sm:max-w-4xl"
    role="region"
    aria-label="Informational Banner"
  >
    <div
      class="rounded-xl bg-neutral-800 bg-[url('/banner-pattern3.svg')] bg-cover bg-center bg-no-repeat p-4 sm:p-6 sm:py-8 text-center shadow-sm dark:bg-blue-900"
    >
      <div class="flex items-center justify-between">
        <div class="flex-1"></div>
        <div class="flex items-center gap-2 flex-shrink-0">
          {title &&
          <p
            class="me-2 inline-block font-medium text-neutral-50 dark:text-neutral-700"
          >
            {title}
          </p>
          }
          <a
            class="group inline-flex items-center gap-x-2 rounded-full border-2 border-neutral-50 backdrop-brightness-75 sm:backdrop-brightness-100 px-3 py-2 text-sm font-semibold text-neutral-50 transition duration-300 hover:border-neutral-100/70 hover:text-neutral-50/70 disabled:pointer-events-none disabled:opacity-50"
            href={url}
            target="_blank"
          >
            {btnTitleMobile ? (
              <>
                <span class="block sm:hidden">{btnTitleMobile}</span>
                <span class="hidden sm:block">{btnTitle}</span>
              </>
            ) : (
              btnTitle
            )}
            <svg
              class="size-4 flex-shrink-0 transition duration-300 group-hover:translate-x-1"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"><path d="m9 18 6-6-6-6"></path></svg
            >
          </a>
        </div>
        <div class="flex-1 flex justify-end">
        <button
          type="button"
          class="inline-flex items-center gap-x-2 rounded-full border border-transparent bg-gray-100 p-2 text-sm font-semibold text-gray-800 hover:bg-gray-200 disabled:pointer-events-none disabled:opacity-50 dark:bg-neutral-700 dark:text-neutral-50 dark:hover:bg-neutral-700/80 dark:hover:text-neutral-50 dark:focus:outline-none"
          id={btnId}
        >
          <span class="sr-only">Dismiss</span>
          <svg
            class="size-5 flex-shrink-0"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            ><path d="M18 6 6 18"></path><path d="m6 6 12 12"></path></svg
          >
        </button>
        </div>
      </div>
    </div>
  </div>
</astro-banner>
<script>
  class AstroBanner extends HTMLElement {
    connectedCallback() {
      const btnId = this.getAttribute("btnId");
      const version = this.getAttribute("version") || "1";
      const rememberDismissal = this.getAttribute("rememberDismissal") !== "false";
      const storageKey = `banner-dismissed-${btnId}-v${version}`;
      
      // Check if this version of the banner was previously dismissed (only if rememberDismissal is true)
      if (rememberDismissal && localStorage.getItem(storageKey)) {
        this.remove();
        return;
      }

      const button = this.querySelector(`#${btnId}`);
      if (button != null) {
        button.addEventListener("click", () => {
          // Save dismissal state to localStorage only if rememberDismissal is true
          if (rememberDismissal) {
            localStorage.setItem(storageKey, "true");
          }
          this.remove();
        });
      }
    }
  }

  customElements.define("astro-banner", AstroBanner);
</script>